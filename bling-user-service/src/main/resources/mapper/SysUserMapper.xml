<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bling.user.mapper.SysUserMapper">

    <resultMap id="userMap" type="com.bling.auth.model.SysUser">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="nickname" column="nickname"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findById" parameterType="long" resultMap="userMap">
        SELECT * FROM sys_user WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="userMap">
        SELECT * FROM sys_user ORDER BY id DESC
    </select>

    <insert id="insert" parameterType="com.bling.auth.model.SysUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user(username, password, nickname, status)
        VALUES(#{username}, #{password}, #{nickname}, #{status})
    </insert>

    <update id="update" parameterType="com.bling.auth.model.SysUser">
        UPDATE sys_user
        SET username = #{username}, nickname = #{nickname}, status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM sys_user WHERE id = #{id}
    </delete>

</mapper>
